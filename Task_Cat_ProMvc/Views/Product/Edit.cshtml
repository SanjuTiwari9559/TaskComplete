@model Task_Cat_ProMvc.Models.viewModel.EditProductRequest
<div class="bg-warning bg-opacity-10 py-2">
    <div class="container">
        <h3 class="text-center">Edit Product</h3>
    </div>

</div>
<div class="container">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Product Id</label>
            <input type="text" id="id" class="form-control rounded-pill" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input type="text" id="name" class="form-control rounded-pill" asp-for="Name" />
        </div>
        <div class="mb-3">
            <input type="checkbox" id="isActive" class="form-check-input" asp-for="IsActive" />
            <label class="form-check-label" for="isActive">Is Active</label>
        <div class="mb-3">
            <label class="form-label">Category</label>
            <select id="categoryId" class="form-control rounded-pill" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Value", "Text", Model.CategoryId))">
                <option value="">Select Category</option>
            </select>
        </div>
        

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn-success">Update</button>
                <button type="submit" class="btn btn-danger ms-4"
                        asp-area="" asp-controller="Product" asp-action="Delete">
                    Delete
                </button>

            </div>
        </div>
    </form>
</div>