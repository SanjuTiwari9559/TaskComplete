
@model Task_Cat_ProMvc.Models.viewModel.editCategoryRequest
<div class="bg-warning bg-opacity-10 py-2 mb-3">
    <div class="container">
        <h3 class="text-center">Edit Category</h3>
    </div>

</div>
<div class="container">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Category Id</label>
            <input type="text" id="name" class="form-control rounded-pill" asp-for="Id"  hidden/>
        </div>
        <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input type="text" id="name" class="form-control rounded-pill" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Is Active</label>
            <div class="form-check">
                <input type="checkbox" id="isActive" class="form-check-input" asp-for="IsActive" />
                <label class="form-check-label" for="isActive">Is Active</label>
            </div>
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-success">Update</button>
                <button type="submit" class="btn btn-danger ms-4"
                        asp-area="" asp-controller="Category" asp-action="Delete">
                    Delete
                </button>
            </div>
        </div>

    </form>
</div>